{{#if errorsMessages.length}}
  <ul>
    {{#each errorsMessages}}
      <div id="error-messages">
        <li>{{this}}</li>  
      </div>
    {{/each}}
  </ul>
{{/if}}
{{#if session.isAdmin}}
<div class="card" >
  <div class="card-body">
    <h3 class="card-title">Aktivera konto</h3>
    <p class="card-text">Är du säker på att du vill Aktivera det här kontot?</p>
    <div class="btn-group">
     <a class="btn btn-secondary" href="/">Nej, gå till startsidan</a>

      <form action="/auth/activate" method="POST">
        <input type="hidden" value="{{id}}" name="accountId">
        <button type="submit" class="btn btn-primary">Aktivera!</button>
      </form>
    </div>

  </div>
</div>


{{else}}
<p>ledsen, du är inte behörig för denna åtgärd</p>
{{/if}}